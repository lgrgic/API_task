<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="pagination">
    <%= will_paginate %>
  </div>
  <h1>Users</h1>
  <% @users.each do |user| %>
    <div class="col-md-4">
      <div class="thumbnail">
        <strong>Given Name:</strong><p><%= user.givenName %></p>
        <strong>Family Name:</strong><p><%= user.familyName %></p>
        <strong>Email:</strong><p><%= user.email %></p>
        <strong>Created at:</strong><p><%= user.created_at %></p>

        <div class="btn-group">
          <%= link_to 'Show', user, class:"btn btn-primary" %>
        </div>
        <div class="btn-group">
          <%= link_to 'Edit', edit_user_path(user), class:"btn btn-primary" %>
        </div>
        <div class="btn-group">
          <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

</div>
